<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:gravity="center">

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/imgV_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp" />

    <cleanpress.cleanpress.ProgressCircle
        android:id="@+id/progress_circle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:textSize="30sp"
        android:textColor="#7fe68b"
        app:progressColor="#7fe68b"
        app:incompleteProgressColor="#FFC4C4C4"
        app:strokeWidth="4.5dp"/>

    <cleanpress.cleanpress.ProgressCircle2
        android:id="@+id/progress_circle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:textSize="30sp"
        android:textColor="#7fe68b"
        app:progressColor="#7fe68b"
        app:incompleteProgressColor="#FFC4C4C4"
        app:strokeWidth="4.5dp" />

    <cleanpress.cleanpress.ProgressCircle3
        android:id="@+id/progress_circle3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:textSize="30sp"
        android:textColor="#7fe68b"
        app:progressColor="#7fe68b"
        app:incompleteProgressColor="#FFC4C4C4"
        app:strokeWidth="4.5dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/check1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="145dp"
        android:layout_marginRight="28dp"
        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/check2"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="145dp"
        android:layout_marginLeft="28dp"
        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/check3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_phase"
        android:layout_below="@+id/imgV_icon"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="-5dp"
        android:text=""
        android:textColor="#afafaf"/>

</RelativeLayout>
