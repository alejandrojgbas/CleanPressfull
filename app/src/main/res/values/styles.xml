<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="EditTextSign" >
        <item name="android:ems">10</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:textColorHint">#999999</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="MenuItems">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">25sp</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="radioImg">
        <item name="android:radius">20dp</item>
        <item name="android:innerRadius">20dp</item>
    </style>

    <style name="TextViewsSchedule">
            <item name="android:layout_width">fill_parent</item>
            <item name="android:layout_height">20dp</item>
            <item name="android:gravity">center</item>
            <item name="android:textSize">14sp</item>
            <item name="android:textColor">#999</item>
    </style>

    <style name="TextViewsWithBackColor">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">#03e1ed</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:drawableRight">@drawable/arrow_down_pr</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="TextViewsWithBackColorNoArrow">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">#03e1ed</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

</resources>
